<div class="title" align="center"><%= @category.name %></div>

<div class="category-edit" align="center">
  <!-- Show edit category name if user is admin -->
  <% if logged_in? and current_user.admin? %>
    <div class="row">
      <span class="badge"><%= link_to "Edit Category Name", edit_category_path(@category), class: "category-text" %></span>
    </div>
  <% end %>
  <!-- Show page navigation buttons -->
  <%= will_paginate @category_articles%>
</div> 

<!-- Display article partial -->
<%= render 'articles/article', obj: @category_articles %>

<!-- Show page navigation buttons -->
<div align="center">
  <%= will_paginate @category_articles%>
</div>