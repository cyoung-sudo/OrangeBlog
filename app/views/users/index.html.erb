<h1 align="center">Alpha Bloggers</h1>

<div align="center">
  <!-- Show page navigation buttons -->
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <!-- Gravatar image links to user show page -->
          <li>
            <%= link_to gravatar_for(user), user_path(user) %>
          </li>
          <!-- Username links to user show page -->
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <!-- Show article count for the user -->
          <li>
            <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
          </li>
          <!-- Show delete option for admin users -->
          <% if logged_in? and current_user.admin? %>
            <li>
              <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all their articles?" } %>
            </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <!-- Show page navigation buttons -->
  <%= will_paginate %>
</div>